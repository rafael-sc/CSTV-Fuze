root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true
ktlint_function_naming_ignore_when_annotated_with = Composable

[*.{json,webmanifest}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2